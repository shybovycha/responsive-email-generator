<email>
    <style>
        td.h3 {
            font-size: 16pt;
            font-weight: bold;
        }
    </style>

    <row>
        <col>
            <img src="" alt=""/>
        </col>
    </row>

    <hr/>

    <row>
        <col>
            Dear {{ user.firstName }},
            <br/>
            Welcome to ConsumerReports.org! Below is important information regarding your account:
        </col>
    </row>

    <row class="panel">
        <col>
            <row>
                <col>
                    <row>
                        <col><b>E-mail:</b><br/>{{ email }}</col>
                    </row>
                    <row>
                        <col><b>Bill to:</b><br/>{{ billTo }}</col>
                    </row>
                    <row>
                        <col><b>Order number:</b><br/>{{ orderNumber }}</col>
                    </row>
                    <row>
                        <col><b>Order date:</b><br/>{{ orderDate }}</col>
                    </row>
                </col>

                <col>
                    <row>
                        <col><b>Start date:</b><br/>{{ startDate }}</col>
                    </row>
                    <row>
                        <col><b>End date:</b><br/>{{ endDate }}</col>
                    </row>
                    <row>
                        <col><b>Subscription type:</b><br/>{{ subscriptionType }}</col>
                    </row>
                    <row>
                        <col><b>Price:</b><br/>{{ subscriptionPrice }}</col>
                    </row>
                </col>
            </row>

            <hr/>

            <row>
                <col>
                    <row>
                        <col><b>Donation order number:</b><br/>{{ donationId }}</col>
                    </row>

                    <row>
                        <col><b>Donation amount:</b><br/>{{ donationPrice }}</col>
                    </row>
                </col>

                <col>
                    <row>
                        <col><b>Donation type:</b><br/>{{ donationType }}</col>
                    </row>
                </col>
            </row>

            <hr/>

            <row>
                <col>
                    <row>
                        <col><b>Card type:</b><br/>{{ cardType }}</col>
                    </row>
                </col>

                <col>
                    <row>
                        <col><b>Card number:</b><br/>{{ maskedCardNumber }}</col>
                    </row>
                </col>
            </row>

            <hr/>

            <row>
                <col>
                    <div class="h3">Total: {{ totalPrice }}</div>
                </col>
            </row>
        </col>
    </row>
</email>